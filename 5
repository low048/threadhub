<template>
  <div>
    <div v-if="!isEditing">
      <!-- Display static content when not editing -->
      <p v-html="post.content"></p>
      <button @click="startEditing">Edit</button>
    </div>

    <div v-else>
      <!-- Display textarea when editing, pre-filled with post.content -->
      <textarea v-model="post.content"></textarea>
      <button @click="savePostEdit">Save</button>
    </div>
  </div>
</template>

<script>
export default {
  data() {
    return {
      isEditing: false,
      post: {
        id: 1, 
        content: "Your static content here",
      },
    };
  },
  methods: {
    startEditing() {
      this.isEditing = true;
    },
    savePostEdit() {
      
      this.$store.commit('posts/EDIT_POST', { postId: this.post.id, newContent: this.post.content });
      
      this.$store.dispatch('posts/editPost', { postId: this.post.id, newContent: this.post.content });

      this.isEditing = false;
    },
  },
};
</script>

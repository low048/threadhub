<template>
  <div>
    <div v-if="!isEditing">
      <!-- Display static content when not editing -->
      <p v-html="post.content"></p>
      <button @click="startEditing">Edit</button>
    </div>

    <div v-else>
      <!-- Display textarea when editing, pre-filled with post.content -->
      <textarea v-model="post.content"></textarea>
      <button @click="stopEditing">Save</button>
    </div>
  </div>
</template>

<script>
export default {
  data() {
    return {
      isEditing: false,
      post: {
        content: "Your static content here",
      },
    };
  },
  methods: {
    startEditing() {
      this.isEditing = true;
    },
    stopEditing() {
      this.isEditing = false;
      // You can perform any additional save/update logic here
    },
  },
};
</script>
